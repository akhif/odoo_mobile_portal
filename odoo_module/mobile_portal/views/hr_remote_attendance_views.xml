<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Remote Attendance Tree View -->
    <record id="hr_remote_attendance_view_tree" model="ir.ui.view">
        <field name="name">hr.remote.attendance.tree</field>
        <field name="model">hr.remote.attendance</field>
        <field name="arch" type="xml">
            <tree string="Remote Attendances" decoration-warning="state=='draft'" decoration-danger="is_mock_location==True">
                <field name="employee_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="worked_hours" widget="float_time"/>
                <field name="latitude"/>
                <field name="longitude"/>
                <field name="gps_accuracy"/>
                <field name="is_mock_location"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state=='confirmed'" decoration-danger="state=='rejected'"/>
            </tree>
        </field>
    </record>

    <!-- Remote Attendance Form View -->
    <record id="hr_remote_attendance_view_form" model="ir.ui.view">
        <field name="name">hr.remote.attendance.form</field>
        <field name="model">hr.remote.attendance</field>
        <field name="arch" type="xml">
            <form string="Remote Attendance">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-danger" invisible="state != 'draft'"/>
                    <button name="action_reset_draft" string="Reset to Draft" type="object" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <group>
                        <group string="Employee">
                            <field name="employee_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Time">
                            <field name="check_in"/>
                            <field name="check_out"/>
                            <field name="worked_hours" widget="float_time"/>
                        </group>
                    </group>
                    <group>
                        <group string="Check-In Location">
                            <field name="latitude"/>
                            <field name="longitude"/>
                            <field name="gps_accuracy"/>
                            <field name="location_address"/>
                        </group>
                        <group string="Check-Out Location">
                            <field name="checkout_latitude"/>
                            <field name="checkout_longitude"/>
                            <field name="checkout_accuracy"/>
                        </group>
                    </group>
                    <group>
                        <group string="Device Info">
                            <field name="device_info"/>
                            <field name="is_mock_location"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Photos" name="photos">
                            <group>
                                <group string="Check-In Photo">
                                    <field name="photo" widget="image" class="oe_avatar"/>
                                    <field name="photo_filename" invisible="1"/>
                                </group>
                                <group string="Check-Out Photo">
                                    <field name="checkout_photo" widget="image" class="oe_avatar"/>
                                    <field name="checkout_photo_filename" invisible="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Remote Attendance Search View -->
    <record id="hr_remote_attendance_view_search" model="ir.ui.view">
        <field name="name">hr.remote.attendance.search</field>
        <field name="model">hr.remote.attendance</field>
        <field name="arch" type="xml">
            <search string="Search Remote Attendance">
                <field name="employee_id"/>
                <field name="check_in"/>
                <filter string="Today" name="filter_today" domain="[('check_in', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('check_in', '&lt;', datetime.datetime.combine(context_today() + relativedelta(days=1), datetime.time(0,0,0)))]"/>
                <filter string="This Week" name="filter_week" domain="[('check_in', '>=', (context_today() + relativedelta(weeks=-1, weekday=0)).strftime('%Y-%m-%d')), ('check_in', '&lt;', (context_today() + relativedelta(weeks=0, weekday=0)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="filter_month" domain="[('check_in', '>=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="filter_confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Rejected" name="filter_rejected" domain="[('state', '=', 'rejected')]"/>
                <separator/>
                <filter string="Mock Location Detected" name="filter_mock" domain="[('is_mock_location', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="groupby_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Check-in Date" name="groupby_date" context="{'group_by': 'check_in:day'}"/>
                    <filter string="State" name="groupby_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Remote Attendance Calendar View -->
    <record id="hr_remote_attendance_view_calendar" model="ir.ui.view">
        <field name="name">hr.remote.attendance.calendar</field>
        <field name="model">hr.remote.attendance</field>
        <field name="arch" type="xml">
            <calendar string="Remote Attendance" date_start="check_in" date_stop="check_out" color="employee_id" mode="week">
                <field name="employee_id"/>
                <field name="worked_hours"/>
            </calendar>
        </field>
    </record>

    <!-- Remote Attendance Action -->
    <record id="hr_remote_attendance_action" model="ir.actions.act_window">
        <field name="name">Remote Attendance</field>
        <field name="res_model">hr.remote.attendance</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="search_view_id" ref="hr_remote_attendance_view_search"/>
        <field name="context">{'search_default_filter_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No remote attendance records found
            </p>
            <p>
                Remote attendance records are created from the mobile app when employees check in/out.
            </p>
        </field>
    </record>
</odoo>
