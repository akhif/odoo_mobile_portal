<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Document Type Tree View -->
    <record id="hr_document_type_view_tree" model="ir.ui.view">
        <field name="name">hr.document.type.tree</field>
        <field name="model">hr.document.type</field>
        <field name="arch" type="xml">
            <tree string="Document Types" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Document Type Form View -->
    <record id="hr_document_type_view_form" model="ir.ui.view">
        <field name="name">hr.document.type.form</field>
        <field name="model">hr.document.type</field>
        <field name="arch" type="xml">
            <form string="Document Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Document Type Action -->
    <record id="hr_document_type_action" model="ir.actions.act_window">
        <field name="name">Document Types</field>
        <field name="res_model">hr.document.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create document types
            </p>
            <p>
                Document types categorize the HR documents that employees can submit.
            </p>
        </field>
    </record>

    <!-- Employee Document Request Tree View -->
    <record id="hr_employee_document_request_view_tree" model="ir.ui.view">
        <field name="name">hr.employee.document.request.tree</field>
        <field name="model">hr.employee.document.request</field>
        <field name="arch" type="xml">
            <tree string="Document Requests" decoration-warning="state=='requested'" decoration-info="state=='submitted'" decoration-success="state=='approved'" decoration-danger="state=='rejected'">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="document_type_id"/>
                <field name="submission_date"/>
                <field name="approval_date"/>
                <field name="state" widget="badge" decoration-warning="state=='requested'" decoration-info="state=='submitted'" decoration-success="state=='approved'" decoration-danger="state=='rejected'"/>
            </tree>
        </field>
    </record>

    <!-- Employee Document Request Form View -->
    <record id="hr_employee_document_request_view_form" model="ir.ui.view">
        <field name="name">hr.employee.document.request.form</field>
        <field name="model">hr.employee.document.request</field>
        <field name="arch" type="xml">
            <form string="Document Request">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="btn-primary" invisible="state != 'requested'"/>
                    <button name="action_approve" string="Approve" type="object" class="btn-success" invisible="state != 'submitted'" groups="hr.group_hr_manager"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-danger" invisible="state != 'submitted'" groups="hr.group_hr_manager"/>
                    <button name="action_reset_draft" string="Reset to Requested" type="object" invisible="state in ['requested', 'submitted']" groups="hr.group_hr_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="requested,submitted,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Document Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Request Details">
                            <field name="employee_id"/>
                            <field name="document_type_id"/>
                            <field name="description"/>
                        </group>
                        <group string="Dates">
                            <field name="create_date" string="Requested Date"/>
                            <field name="submission_date"/>
                            <field name="approval_date"/>
                        </group>
                    </group>
                    <group string="Rejection" invisible="state != 'rejected'">
                        <field name="rejection_reason"/>
                    </group>
                    <notebook>
                        <page string="Attachments" name="attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Employee Document Request Search View -->
    <record id="hr_employee_document_request_view_search" model="ir.ui.view">
        <field name="name">hr.employee.document.request.search</field>
        <field name="model">hr.employee.document.request</field>
        <field name="arch" type="xml">
            <search string="Search Document Requests">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="document_type_id"/>
                <filter string="Requested" name="filter_requested" domain="[('state', '=', 'requested')]"/>
                <filter string="Submitted" name="filter_submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved" name="filter_approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Rejected" name="filter_rejected" domain="[('state', '=', 'rejected')]"/>
                <separator/>
                <filter string="My Requests" name="filter_my" domain="[('employee_id.user_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="groupby_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Document Type" name="groupby_type" context="{'group_by': 'document_type_id'}"/>
                    <filter string="State" name="groupby_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Employee Document Request Action -->
    <record id="hr_employee_document_request_action" model="ir.actions.act_window">
        <field name="name">Document Requests</field>
        <field name="res_model">hr.employee.document.request</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="hr_employee_document_request_view_search"/>
        <field name="context">{'search_default_filter_my': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No document requests found
            </p>
            <p>
                Employees can submit HR document requests from the mobile app.
            </p>
        </field>
    </record>

    <!-- Pending Approvals Action (for HR managers) -->
    <record id="hr_employee_document_request_pending_action" model="ir.actions.act_window">
        <field name="name">Pending Document Approvals</field>
        <field name="res_model">hr.employee.document.request</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="hr_employee_document_request_view_search"/>
        <field name="domain">[('state', '=', 'submitted')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No pending document requests
            </p>
            <p>
                All document requests have been processed.
            </p>
        </field>
    </record>
</odoo>
